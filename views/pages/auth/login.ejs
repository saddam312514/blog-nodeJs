<%- include('../../partials/head.ejs') %> 

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
            <h4>Sign In</h4>
       
            <form action="/auth/login" method="POST">
             
                <div class="form-group">
                    <label for="email">Enter Your Valid Email</label>
                    <input type="email" 
                    name="email" id="email" 
                    class="form-control <%= error.email ? 'is-invalid' : '' %> ">
                    <div class="invalid-feedback">
                        <%= error.email && error.email %> 

                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Enter Your Stron password</label>
                    <input type="password" name="password" id="password" class="form-control <%= error.password ? 'is-invalid' : '' %> ">

                    <div class="invalid-feedback">
                        <%= error.password && error.password %> 

                    </div>
         
                </div>
                <input type="submit" class="btn btn-primary" value="Sign In">
  
           
                </form>
         </div>
        </div>
        
    
    </div>
</div>

<%- include('../../partials/footer.ejs') %> 

</body>    
</html>